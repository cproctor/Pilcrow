.page-header
	.row
		.span10
			%h1 My library
		.span6
			%form{:action => '/lookup', :method => "GET"}
				%input{:type => 'text', :name => 'isbn', :id => 'isbn'}
				%input{:type => 'submit', :class => 'btn', :value => "Lookup"}
.row
	.span16
		%table
			%thead
				%tr
					%th Class
					%th Title
					%th	Author
			%tbody
				-@books.each do |book|
					%tr
						%td="#{book.dewey_class.number} #{book.dewey_class.top_level_description}"
						%td
							%a{:href => "/books/#{book.id}"}=book.title
						%td=book.all_authors
			